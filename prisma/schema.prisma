datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               Int      @id @default(autoincrement())
  role             String
  todos            Todo[]
}

model Todo {
  id                 Int      @id @default(autoincrement())
  content            String
  userId             Int
  user               User     @relation(fields: [userId], references: [id])
  @@index([userId])
}